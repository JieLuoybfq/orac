#epr lib dirs
EPRLIBDIR = /cmsaf/cmsaf-cld4/mjerg/epr/epr_api-2.2/build/release
EPRINCDIR = /cmsaf/cmsaf-cld4/mjerg/epr/epr_api-2.2/src

#Set path to hdf library and include directory. hdf4 has to be compiled with netcdf support turned OFF!
#otherwise you run into problems when using netcdf explicitly s.b.
HDFLIB=/cmsaf/cmsaf-cld4/mjerg/libs/hdf4_sunstudio_no_netcdf/lib
HDFINCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/hdf4_sunstudio_no_netcdf/include

HDF5LIB=/cmsaf/cmsaf-cld4/mjerg/libs/hdf5_sunstudio/lib
HDF5INCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/hdf5_sunstudio/include

#Set path to HDF-EOS library. Should be compiled with the same version of the HDF4
#library specified above (HDFLIB)
EOSLIB=/cmsaf/cmsaf-cld4/mjerg/libs/hdfeos2/lib
EOSINCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/hdfeos2/lib


#Set path to netcdf library and include directory.
NCDFLIB=/cmsaf/cmsaf-cld4/mjerg/libs/netcdf_sunstudio/lib
NCDFINCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/netcdf_sunstudio/include

#Setup GRIB API library and JASPER
GRIBLIB=/cmsaf/cmsaf-cld4/mjerg/libs/grib_api_1.8.0/lib
GRIBINCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/grib_api_1.8.0/include

JASPERLIB=/cmsaf/cmsaf-cld4/mjerg/libs/jasper1.900.1/lib
JASPERINCLUDE=/cmsaf/cmsaf-cld4/mjerg/libs/jasper1.900.1/include

#Setup RTTOV library
#RTTOVLIB=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio/lib
#RTTOVINCLUDE=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio/include
#RTTOVMODULE=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio/mod

#debug
RTTOVLIB=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio-debug/lib
RTTOVINCLUDE=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio-debug/include
RTTOVMODULE=/cmsaf/cmsaf-cld4/esa_cloud_cci/rttov10.2/sunstudio-debug/mod

#Set up libraries and includes
LIBS=-L$(GRIBLIB) -lgrib_api_f90 -lgrib_api_f77 -lgrib_api -L$(JASPERLIB) -ljasper   -L$(HDFLIB) -lmfhdf -ldf  -ljpeg -lz -lm -L$(EOSLIB) -lhdfeos -lGctp -L$(HDF5LIB) -lhdf5_fortran -lhdf5 -L$(RTTOVLIB) -lrttov10.2.0_emis_atlas -L$(NCDFLIB) -lnetcdf -lrttov10.2.0_main -lrttov10.2.0_coef_io -lrttov10.2.0_other   -L$(EPRLIBDIR) -lepr_api
INC=-I./  -I$(GRIBINCLUDE) -I$(HDFINCLUDE)  -I$(EOSINCLUDE) -I$(HDF5INCLUDE) -I$(NCDFINCLUDE) -I$(JASPERINCLUDE) -I$(RTTOVINCLUDE) -I$(EPRINCDIR) -M./ -M$(GRIBINCLUDE) -M$(NCDFINCLUDE) -M$(HDFINCLUDE)  -M$(EOSINCLUDE) -M$(HDF5INCLUDE)  -M$(JASPERINCLUDE) -M$(RTTOVMODULE) -M$(EPRINCDIR)
